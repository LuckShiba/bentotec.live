extends frame.pug

block head
    link(rel="stylesheet", href="/css/index.css")
    link(rel="stylesheet", href="/css/card.css")    
    link(rel="stylesheet", href="/css/vote.css")
    link(rel="stylesheet", href="/css/modal.css")
    script(src="/lib/js/vanilla-masker.min.js")
    script(src="/lib/js/CPF.js", async)
    script(src="/js/index.js", defer, type="module") 
    if recaptchaEnabled
        script(src="https://www.google.com/recaptcha/api.js?onload=captchaLoad", async, defer)

block content
    .advice 
        h6.advice__title AVISO
        p.advice__text A votação encerrará dia 26 de novembro de 2021 às 12h00.
    .cards
        each project in data
            include card.pug
    .vote-container
        include vote.pug
    include modal.pug